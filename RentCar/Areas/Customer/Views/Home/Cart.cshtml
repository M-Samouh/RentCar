@using RentCar.Models
@model List<Products>

@{
    ViewData["Title"] = "Cart";
}

<br />
<div class="row">
    <div class="col-lg-8"></div>

    <div class="col-lg-4 text-center " style="align-items:baseline">
        <label class="col-lg-2" style="margin-top:15px;margin-right:20px;width:110px;padding:0px;font-size:13px"> TOTAL AMOUNT </label>
        <input class="form-control col-lg-2 text-center" readonly type="text" value=" @Model.Sum(c => c.Price) DH " style="width:200px;height:50px;margin-right:30px" />

    </div>
</div>
<br />
<div class="row">
    <table class="table ">
        <thead>
            <tr style="font-family:'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;font-size:20px;">
                <th class="col-lg-5">Rented Cars List</th>
                <th>        Informations</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="col-lg-5">
                        <img src="~/images/@item.Image" style="width: 100%; height:250px" />
                    </td>

                    <td>
                        <form class="container-fluid col-lg-5" style="position:absolute;">
                            <label> <u>DESCRIPTION  </u></label>
                            <div class="row">
                                <label class="col-lg-4">Matricule </label>
                                <div class="col-lg-3">@item.Matricule</div>
                            </div>
                            <br />
                            <div class="row">
                                <label class="col-lg-4">Marque </label>
                                <div class="col-lg-3">@item.ProductTypes.ProductType</div>
                            </div>
                            <br />
                            <div class="row">
                                <label class="col-lg-4">Price </label>
                                <div class="col-lg-3">@item.Price</div>
                            </div>
                            <br />
                            <div class="row">
                                <label class="col-lg-4">Nombre de Kilometres </label>
                                <div class="col-lg-3">@item.Kilometrage</div>
                            </div>
                            <br />
                            <div class="row">
                                <label class="col-lg-4">Couleur </label>
                                <div class="col-lg-3">@item.ProductColor</div>
                            </div>

                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<div class="col-lg-12">
    <div class="col-lg-6">

    </div>
    <div class="col-lg-6" style="align-items:baseline">
        <a asp-action="Index" asp-controller="Home" class="btn btn-success col-lg-3" style="margin-top:13px;margin-right:20px"> Back To List</a>
        <a asp-area="Customer" asp-action="Checkout" asp-controller="Order" class="btn btn-primary col-lg-3 " style="margin-top:0px;padding:14px;width:250px;height:60px;font-size:20px;margin-right:0px">Proceed To Checkout</a>
    </div>
</div>

